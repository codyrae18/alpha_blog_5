
<div class="container">
<h1 class="text-center mt-4 mb-3">Login</h1>

<div class="container">
  <%= form_for(:session, class:"shadow p-3 mb-3 bg-secondary rounded", url: login_path) do |form| %>  
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= form.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Enter password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit "Login", class:"btn btn-outline-light btn-lg" %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="mb-3">
      <%= link_to '[ Back ]', articles_path, class: "text-secondary row justify-content-center" %>
    </div>
</div>
</div>